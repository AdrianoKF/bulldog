<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>raspberrypi</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>

      <!-- Now, select which projects to include. -->
      <includes>
        <include>org.bulldog:bulldog-core</include>
        <include>org.bulldog:bulldog-devices</include>
        <include>org.bulldog:bulldog-linux</include>
        <include>org.bulldog:bulldog-board-raspberrypi</include>
      </includes>

      <useProjectArtifact>false</useProjectArtifact>

      <unpack>true</unpack>

    </dependencySet>
  </dependencySets>
</assembly>
