<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>beagleboneblack-softfp</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <moduleSets>
    <moduleSet>
    
      <!-- Enable access to all projects in the current multimodule build! -->
      <useAllReactorProjects>true</useAllReactorProjects>
      
      <!-- Now, select which projects to include in this module-set. -->
      <includes>
        <include>org.bulldog:bulldog-core</include>
        <include>org.bulldog:bulldog-devices</include>
        <include>org.bulldog:bulldog-linux</include>
        <include>org.bulldog:bulldog-linux-native:so</include>
        <include>org.bulldog:bulldog-board-beagleboneblack</include>
      </includes>

      <binaries>
<!--        <outputDirectory>modules/maven-assembly-plugin</outputDirectory>-->
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
